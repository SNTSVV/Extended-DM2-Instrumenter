<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape>
            <gradient n1:startColor="@color/blue2" n1:endColor="@color/blue1" n1:angle="@integer/background_shape_gradient_angle" />
            <stroke n1:width="@dimen/shape_stroke_width" n1:color="@color/blue3" />
            <corners n1:radius="@dimen/shape_corners_radius" />
            <padding n1:left="@dimen/shape_padding" n1:top="@dimen/shape_padding" n1:right="@dimen/shape_padding" n1:bottom="@dimen/shape_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient n2:startColor="@color/blue1" n2:endColor="@color/blue2" n2:angle="@integer/background_shape_gradient_angle"
              xmlns:n2="http://schemas.android.com/apk/res/android" />
            <stroke n3:width="@dimen/shape_stroke_width" n3:color="@color/blue3"
              xmlns:n3="http://schemas.android.com/apk/res/android" />
            <corners n4:radius="@dimen/shape_corners_radius"
              xmlns:n4="http://schemas.android.com/apk/res/android" />
            <padding n5:left="@dimen/shape_padding" n5:top="@dimen/shape_padding" n5:right="@dimen/shape_padding" n5:bottom="@dimen/shape_padding"
              xmlns:n5="http://schemas.android.com/apk/res/android" />
        </shape>
    </item>
</selector>